<script>

	function closeAllRoots()
	{
		var rootsAr = tree.getSubItems(0).split(",")
		for(var i=0;i<rootsAr.length;i++)
		{
			tree.closeAllItems(rootsAr[i])
		}
	}
	function ConfirmDelete()
	{
		if(confirm("確定刪除?"))
		{
			return true;
		}else{
			return false
		}
	}
	function out_or_not()
	{
		var fm = document.getElementById("custom");
		fm.action="export.php";
		fm.submit();
	}
	function go()
	{
		var fm = document.getElementById("custom");
		fm.action="index.php";
		fm.submit();
	}
</script>
